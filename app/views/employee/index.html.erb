<h1>Company</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>designation</th>
      <th>department</th>
      <th>PAN</th>
      <th>PF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.department %></td>
        <td><%= employee.PAN %></td>  
        <td><%= employee.PF %></td>  
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><td><%= button_to 'Delete', employee_path(employee), method: :delete, data: {confirm: "Are you sure?"} %></td></td>
      </tr>
    <% end %>
  </tbody>
</table>

