

<%= form_with(url: @url, method: @method) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :value => @employee.name %>
  </div>
  <div class="field">
    <%= form.label :designation %>
    <%= form.text_field :address, :value => @employee.designation %>
  </div>
  <div class="field">
    <%= form.label :department %>
    <%= form.text_field :department, :value => @employee.department %>
  </div>
  <div class="field">
    <%= form.label :PAN %>
    <%= form.text_field :PAN, :value => @employee.PAN %>
  </div>
  <div class="field">
    <%= form.label :PF %>
    <%= form.text_field :website, :value => @employee.PF %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>